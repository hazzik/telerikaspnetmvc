
@{
    Layout = "~/Areas/Razor/Views/Shared/_Layout.cshtml";
}

@section HeadContent{
    @RenderSection("HeadContent", required:false)
}

<div class="example @("t-" + Html.GetCurrentTheme())">
	<h2 class="example-title">@Html.ExampleTitle()</h2>
	<div id="theming"><a href="#" class="t-drop-down">@Html.GetCurrentTheme()</a></div>
	<script type="text/javascript">
	    var themePreviewsLocation = '@Url.Content(string.Format("~/Content/Images/Themes/{0}/", ViewContext.RouteData.Values["Controller"]))';
	</script>

	@RenderBody()

	<div class="corner rc-topleft"></div>
	<div class="corner rc-topright"></div>
    <div class="eoe"></div>
</div>

<div class="theme-agnostic">
	@Html.Partial("_CodeViewer")
	@Html.Partial("_GetMoreThanExpected")
</div>